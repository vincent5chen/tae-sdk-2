        <param name="encoding" value="GBK"/>
        <param name="threshold" value="error"/>
        <param name="bufferedIO" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss} %C{1}#%M [%p]: %m%n"/>
        </layout>
    </appender>

